generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Brand {
  id      String  @id @unique
  name    String?
  devices Int
}

model Device {
  id          String @id @unique
  brand_id    String
  name        String
  img         String
  description String
  active      Boolean @default(true)
}

model User {
  id       String  @id @unique
  email    String @unique
  phone    String @unique
  username String
  password String
  role    String @default("client")
}

model Repair {
  id       String   @id @unique
  date     DateTime
  position Float[]
  active   Boolean  @default(true)
}

model Piece {
  id        String  @id @unique
  name      String
  category  String
  phoneIds  String[]
  price     Float
  stock     Int     @default(0)
}

model Order {
  id        String  @id @unique
  userId    String?
  name      String
  date      DateTime
  phone     String?
  phoneId   String
  phoneName String  @default("undefined")
  piecesId  String?
  address   String
  city      String
  zipCode   String
  status    String
  total     Float
  subtotal  Float
}

model Data {
  id  String @id @unique
  name  String @unique
  text  String?
  num   Int?
  decimal Float?
}