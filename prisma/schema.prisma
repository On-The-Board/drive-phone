generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

enum crdb_internal_region {
  aws_eu_central_1 @map("aws-eu-central-1")
}

model Brand {
  id      String  @id @unique
  name    String?
  devices Int
}

model Device {
  id          String @id @unique
  brand_id    String
  name        String
  img         String
  description String
  active      Boolean @default(true)
}

model User {
  id       String  @id @unique
  email    String @unique
  phone    String @unique
  username String
  password String
  role    String @default("client")
}

model Piece {
  id        String  @id @unique
  name      String
  category  String
  phoneIds  String[]
  price     Float
  stock     Int     @default(0)
  img       String[]
}

model Order {
  id        String  @id @unique
  sku       Int?
  userId    String?
  name      String
  date      DateTime @unique
  phone     String?
  phoneId   String
  phoneName String  @default("undefined")
  piecesId  String?
  address   String
  city      String
  zipCode   String
  status    String
  total     Float
  subtotal  Float
}

model Data {
  id  String @id @unique
  name  String @unique
  text  String?
  num   Int?
  decimal Float?
}

model Accesorie {
  id  String @id @unique
  name  String
  phoneId String
  img     String[] @default([""])
  price   Int
  stock   Int
  description String @default("Description de l'Accessoire")
}