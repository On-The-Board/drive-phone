generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Brand {
  id      String  @id @unique
  name    String?
  devices Int
}

model Device {
  id          String @id @unique
  brand_id    String
  name        String
  img         String
  description String
}

model User {
  id       Int     @id @unique @default(autoincrement())
  email    String
  username String
  password String
  admin    Boolean @default(false)
}

model Repair {
  id       Int      @id @unique @default(autoincrement())
  date     DateTime
  position String
  active   Boolean  @default(true)
  // reparation type... phone...
}
