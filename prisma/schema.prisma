generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Brand{
  id   String   @id @unique
  name  String?
  devices Int
}

model Device{
  id   String   @id @unique
  brand_id  String
  name  String
  img   String
  description String
}

model Admin {
  id       String  @id @unique
  username String
  password String
  owner    Boolean @default(false)
}

model Repair {
  id       String   @id @unique
  date     DateTime
  position String   @unique
  active   Boolean  @default(true)
  // reparation type... phone...
}